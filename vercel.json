{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/((?!api|assets|badges|.*\\.json|.*\\.svg|.*\\.png|.*\\.jpg|.*\\.ico).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/badges/(.*)",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/json"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        }
    ]
}

